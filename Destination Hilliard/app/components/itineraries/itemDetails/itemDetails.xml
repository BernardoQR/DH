<Page xmlns="http://schemas.nativescript.org/tns.xsd" xmlns:widgets="utils/widgets" navigatedTo="navigatedTo" >
  <Page.actionBar>
    <ActionBar title="{{ pageTitle }}">
      <NavigationButton ios.icon="res://ic_add_white" android.icon="res://ic_add_white_24dp" tap="onNavigateBack" />
    </ActionBar>
  </Page.actionBar>
  <StackLayout row="1">

    <image src="{{ pointOfInterestImageUrl }}"  height="200" ></image>
    <Label text="{{ pointOfInterestTitle }}"   cssClass="title-label"/>
    <StackLayout row="1">
      <Label text="{{ pointOfInterestTelephone }}" />
    </StackLayout>
    <Label text="{{ pointOfInterestAddress }}"  />
    <Label text="{{ pointOfInterestDescription }}" />
  </StackLayout>
</Page>