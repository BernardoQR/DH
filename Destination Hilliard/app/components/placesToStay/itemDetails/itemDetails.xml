<Page xmlns="http://schemas.nativescript.org/tns.xsd" xmlns:widgets="utils/widgets" navigatedTo="navigatedTo" >
  <Page.actionBar>
    <ActionBar title="{{ pageTitle }}">
      <NavigationButton ios.icon="res://ic_add_white" android.icon="res://ic_add_white_24dp" tap="onNavigateBack" />
    </ActionBar>
  </Page.actionBar>

  <StackLayout row="1">

    <image src="{{ ImageUrl }}" resize="w:160,h:160,fill:cover"></image>
    <Label text="{{ Title }}"   cssClass="title-label"/>
    <StackLayout row="1">
      <Label text="{{ Telephone }}" />
    </StackLayout>
    <Label text="{{ Address }}"  />
    <Label text="{{ Description }}" />

    <image src="~/images/Share.png" width="100" height="100"  ontap="share" ></image>


  </StackLayout>
</Page>